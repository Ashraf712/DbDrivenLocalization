@using System.Globalization
@{
    ViewData["Title"] = Localize("Home.Title");
    var portfolioUrl = "https://ashraf712.github.io/";
    var linkedinUrl = "https://www.linkedin.com/in/ashraf-ali-b43aa321a/";
    var githubUrl = "https://github.com/Ashraf712/DbDrivenLocalization";
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<section class="hero hero-bg rounded-4 p-4 p-lg-5 shadow-sm overflow-hidden">
    <div class="hero-glow"></div>

    <div class="row align-items-center g-4">
        <div class="col-lg-7">
            <div class="d-inline-flex align-items-center gap-2 badge hero-badge px-3 py-2 mb-3">
                <span class="dot"></span>
                <span>@Localize("Home.Hero.Badge")</span>
            </div>

            <h1 class="display-5 fw-bold text-white mb-3 f-25">
                @Localize("Home.Hero.Title")
            </h1>

            <p class="lead text-white-50 mb-4">
                @Localize("Home.Hero.Subtitle")
            </p>

            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-light btn-lg px-4" href="@portfolioUrl" target="_blank" rel="noopener">
                    @Localize("Home.Cta.Portfolio")
                </a>

                <a class="btn btn-outline-light btn-lg px-4" href="@githubUrl" target="_blank" rel="noopener">
                    @Localize("Home.Cta.GitHub")
                </a>

                <a class="btn btn-outline-light btn-lg px-4" href="@linkedinUrl" target="_blank" rel="noopener">
                    @Localize("Home.Cta.LinkedIn")
                </a>
            </div>

            <div class="mt-4 text-white-50 small">
                <div class="fw-semibold text-white">@Localize("Home.Byline.Title")</div>
                <div>@Localize("Home.Byline.Role")</div>
            </div>

            <div class="mt-3">
                <span class="pill">@Localize("Home.Pill.Fast")</span>
                <span class="pill">@Localize("Home.Pill.Secure")</span>
                <span class="pill">@Localize("Home.Pill.DBDriven")</span>
                <span class="pill">@Localize("Home.Pill.Versioned")</span>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="glass-card p-3 p-lg-4 h-100">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <div class="text-white fw-semibold">@Localize("Home.Switcher.Title")</div>
                        <div class="text-white-50 small">@Localize("Home.Switcher.Subtitle")</div>
                    </div>
                    <div class="text-white-50 small">
                        @CultureInfo.CurrentUICulture.Name
                    </div>
                </div>

                <div class="mb-3">
                    @await Component.InvokeAsync("LanguageSwitcher")
                </div>

                <div class="codebox mt-3">
                    <pre class="m-0"><code>@("@Localize(\"Home.Title\")")
                @("@Localize(\"Welcome.User\", Model.Name)")</code></pre>
                </div>

                <div class="mt-3 text-white-50 small">
                    @Localize("Home.Switcher.Note")
                </div>
            </div>

        </div>
    </div>
</section>

<section class="mt-4">
    <div class="section-title">
        <h2 class="h4 fw-bold mb-1">@Localize("Home.Features.Title")</h2>
        <p class="text-muted mb-0">@Localize("Home.Features.Subtitle")</p>
    </div>

    <div class="row g-3 g-lg-4 mt-1">
        <div class="col-md-3">
            <div class="feature-card h-100">
                <div class="icon-bubble">⚡</div>
                <h3 class="h5 fw-semibold mt-3">@Localize("Home.Feature1.Title")</h3>
                <p class="text-muted mb-0 mt-2">@Localize("Home.Feature1.Desc")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="feature-card h-100">
                <div class="icon-bubble">🔁</div>
                <h3 class="h5 fw-semibold mt-3">@Localize("Home.Feature2.Title")</h3>
                <p class="text-muted mt-2 mb-0">@Localize("Home.Feature2.Desc")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="feature-card h-100">
                <div class="icon-bubble">🛡️</div>
                <h3 class="h5 fw-semibold mt-3">@Localize("Home.Feature3.Title")</h3>
                <p class="text-muted mt-2 mb-0">@Localize("Home.Feature3.Desc")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="badge-base LI-profile-badge"
                 data-locale="en_US"
                 data-size="large"
                 data-theme="light"
                 data-type="HORIZONTAL"
                 data-vanity="ashraf-ali-b43aa321a"
                 data-version="v1">
                <a class="badge-base__link LI-simple-link"
                   href="https://kw.linkedin.com/in/ashraf-ali-b43aa321a?trk=profile-badge"></a>
            </div>

        </div>
    </div>
</section>
<section class="mt-4">
    <div class="row mt-1">
        <div class="col-lg-12">
            <div class="d-flex align-items-center justify-content-between mb-2">
            </div>
            <div class="ratio ratio-16x9 rounded-3 border overflow-hidden iframe-wrap">
                <iframe src="@portfolioUrl"
                        title="Ashraf Ali Portfolio"
                        loading="lazy"
                        style="border:0; width:100%; height:100%;">
                </iframe>
                <a href="@portfolioUrl" target="_blank" rel="noopener"
                   class="iframe-open" aria-label="Open Ashraf Ali Portfolio"></a>
            </div>
        </div>
    </div>
</section>
<section class="mt-4">
    <div class="section-title">
        <h2 class="h4 fw-bold mb-1">@Localize("Home.Demo.Title")</h2>
        <p class="text-muted mb-0">@Localize("Home.Demo.Subtitle")</p>
    </div>

    <div class="row g-3 g-lg-4 mt-1">
        <div class="col-lg-6">
            <div class="demo-card h-100">
                <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                        <div class="demo-tag safe">@Localize("Home.Demo.Safe.Tag")</div>
                        <h3 class="h5 fw-semibold mt-2">@Localize("Home.Demo.Safe.Title")</h3>
                        <p class="text-muted mb-3">@Localize("Home.Demo.Safe.Desc")</p>
                    </div>
                </div>

                <div class="alert alert-light border mb-0">
                    <div class="small text-muted mb-1">@Localize("Home.Demo.Output")</div>
                    <div class="fs-6">@Localize("Home.HtmlNote")</div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="demo-card h-100">
                <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                        <div class="demo-tag raw">@Localize("Home.Demo.Raw.Tag")</div>
                        <h3 class="h5 fw-semibold mt-2">@Localize("Home.Demo.Raw.Title")</h3>
                        <p class="text-muted mb-3">@Localize("Home.Demo.Raw.Desc")</p>
                    </div>
                </div>

                <div class="alert alert-light border mb-0">
                    <div class="small text-muted mb-1">@Localize("Home.Demo.Output")</div>
                    <div class="fs-6">@LocalizeRaw("Home.HtmlNote")</div>
                </div>

                <div class="text-muted small mt-3">
                    @Localize("Home.Demo.Raw.Warning")
                </div>
            </div>
        </div>
    </div>
</section>
<section class="mt-4">
    <div class="row g-3 g-lg-4">
        <div class="col-lg-7">
            <div class="project-card h-100">
                <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
                    <h2 class="h4 fw-bold mb-0">@Localize("Home.Project.Title")</h2>
                    <span class="kbd">@Localize("Home.Project.Badge")</span>
                </div>
                <p class="text-muted mb-3">@Localize("Home.Project.Subtitle")</p>

                <ul class="list-check">
                    <li>@Localize("Home.Project.B1")</li>
                    <li>@Localize("Home.Project.B2")</li>
                    <li>@Localize("Home.Project.B3")</li>
                    <li>@Localize("Home.Project.B4")</li>
                </ul>

                <div class="d-flex flex-wrap gap-2 mt-3">
                    <a class="btn btn-primary" href="@githubUrl" target="_blank" rel="noopener">@Localize("Home.Project.CtaRepo")</a>
                    <a class="btn btn-outline-primary" href="@portfolioUrl" target="_blank" rel="noopener">@Localize("Home.Project.CtaPortfolio")</a>
                    <a class="btn btn-outline-primary" href="@linkedinUrl" target="_blank" rel="noopener">@Localize("Home.Project.CtaLinkedIn")</a>
                </div>

                <div class="text-muted small mt-3">
                    @Localize("Home.Project.FooterNote")
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="profile-card h-100">
                <div class="d-flex align-items-center justify-content-between gap-2 mb-3">
                    <div>
                        <h2 class="h5 fw-bold mb-1">@Localize("Home.Profile.Title")</h2>
                        <div class="text-muted small">@Localize("Home.Profile.Subtitle")</div>
                    </div>

                    <a class="libutton" href="https://www.linkedin.com/comm/mynetwork/discovery-see-all?usecase=PEOPLE_FOLLOWS&followMember=ashraf-ali-b43aa321a" target="_blank">@Localize("Home.Profile.FollowBtn")</a>
                </div>
                <div class="mt-3">
                    <div class="text-muted small">@Localize("Home.Profile.LinksTitle")</div>
                    <div class="d-grid gap-2 mt-2">
                        <a class="btn btn-outline-secondary" href="@portfolioUrl" target="_blank" rel="noopener">
                            @Localize("Home.Profile.Portfolio")
                        </a>
                        <a class="btn btn-outline-secondary" href="@githubUrl" target="_blank" rel="noopener">
                            @Localize("Home.Profile.GitHub")
                        </a>
                        <a class="btn btn-outline-secondary" href="@linkedinUrl" target="_blank" rel="noopener">
                            @Localize("Home.Profile.LinkedIn")
                        </a>
                    </div>
                </div>

                <div class="text-muted small mt-3">
                    @Localize("Home.Profile.Note")
                </div>
            </div>
        </div>
    </div>
</section>
